{
  "name": "nix-package-search",
  "homepage": "https://ahobson.github.io/nix-package-search/",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "gh-pages -f -d dist",
    "dev": "VITE_GITHUB_SHA=$(git rev-parse --short HEAD) vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.2.0",
    "gh-pages": "^6.3.0",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-plugin-wasm": "^3.5.0",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.9.0 <21"
  },
  "type": "module",
  "dependencies": {
    "sqlite-wasm-http": "github:ahobson/sqlite-wasm-http#c96121f"
  }
}
